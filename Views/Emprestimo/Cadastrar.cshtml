@model EmprestimosModel
@{

	ViewData["Title"] = "Cadastrar";
}



<div class="container bg-dark p-5 rounded-5"
	<div class="mb-5 text-center">
		<h1 class="text-light">Cadastrar Emprestimo</h1>
	
<form method="post" asp-controller="Emprestimo" asp-action="Cadastrar">
    <div class="mb-3">
        <label for="Recebedor" class="form-label text-light">Recebedor</label>
        <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo o Livro?">
        <span class="text-danger"asp-validation-for="Recebedor" ></span>
    </div>

    <div class="mb-3">
        <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
        <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando?">
        <span class="text-danger"asp-validation-for="Fornecedor" ></span>
    </div>

    <div class="mb-3">
        <label for="Livro" class="form-label text-light">Livro</label>
        <input type="text" class="form-control" asp-for="LivroEmprestimo" id="Livro" placeholder="Qual livro.?">
        <span class="text-danger"asp-validation-for="LivroEmprestimo" ></span>
    </div>

    <div class="d-flex gap-5 mt-5">
        <button type="submit" class="btn btn-success w-50"><i class="bi bi-database-fill-up mx-1"></i>Adicionar</button>
        <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Cadastrar">Voltar </a>
    </div>
</form>
</div>